[user]
	email = hello@chinleung.com
	name = Chin Leung
[core]
	excludesfile = ~/.gitignore
	editor = nvim
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[alias]
	clean-branches = !git branch | egrep -v \"(main|\\*)\" | xargs git branch -D
[init]
    defaultBranch = main
[pull]
    rebase = false
[gpg]
    program = gpg
